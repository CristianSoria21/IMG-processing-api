# Example environment variables for IMG-processing-api

PORT=8000                 # Port where the backend server will run
JWT_SECRET=your_jwt_secret_here   # Secret key for signing/verifying JWT tokens
APP_URL=http://localhost:8000     # Public URL of the backend API
UPLOAD_DIR=uploads                # Directory for storing uploaded files
FRONTEND_URL=http://localhost:3000 # URL of the frontend application (for CORS, redirects, etc.)
DATABASE_URL=mysql://user:password@localhost:3306/img_processing # Connection string for the MySQL database
